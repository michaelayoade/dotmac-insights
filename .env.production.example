# Production environment configuration
ENVIRONMENT=production

# Auth (required)
JWKS_URL=https://auth.example.com/.well-known/jwks.json
JWT_ISSUER=https://auth.example.com
JWT_AUDIENCE=dotmac-insights
CORS_ORIGINS=https://dashboard.example.com,https://admin.example.com

# Database (required; must not be sqlite)
DATABASE_URL=postgresql+psycopg://dotmac_prod:CHANGE_ME@db:5432/dotmac_insights

# Redis / Celery (required)
REDIS_URL=redis://redis:6379/0

# Splynx
SPLYNX_API_URL=https://splynx.example.com/api/2.0
SPLYNX_AUTH_BASIC=BASE64_KEY_SECRET

# ERPNext
ERPNEXT_API_URL=https://erpnext.example.com
ERPNEXT_API_KEY=CHANGE_ME
ERPNEXT_API_SECRET=CHANGE_ME

# Chatwoot
CHATWOOT_API_URL=https://chatwoot.example.com/api/v1
CHATWOOT_API_TOKEN=CHANGE_ME
CHATWOOT_ACCOUNT_ID=1
